<html>
  <head>
    <title>My Blogs</title>
    <%- include('./partials/styles.ejs')%>
  </head>
  <body>
    <%- include('./partials/topbar.ejs') %>
    <a class="add-button" href="/blogs/addblog">+ add blog</a>
    <% if(blogs.length > 0) { for(let i = 0;i < blogs.length;i++){ %>
    <div class="blog-card">
      <div class="blog-title"><%= blogs[i].title %></div>
      <div class="blog-body"><%= blogs[i].body %></div>
      <div class="blog-actions">
        <a href="/blogs/editblog/<%= blogs[i]._id%>" class="edit-button"
          >Edit</a
        >
        <a href="/blogs/deleteblog/<%= blogs[i]._id%>" class="delete-button"
          >Delete</a
        >
      </div>
    </div>
    <% }}%>
  </body>
</html>
